<div id="<%= dom_id item %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Order:</strong>
    <%= item.order_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Dish:</strong>
    <%= item.dish_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= item.quantity %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this item", item, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this item", edit_item_path(item), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
