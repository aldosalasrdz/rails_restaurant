<%= content_for :header do %>
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold leading-tight tracking-tight">Restaurants</h1>
    <div>
      <%= link_to new_restaurant_path, class: "inline-flex items-center gap-1 justify-center rounded-md font-medium outline-none transition-colors bg-neutral-900 text-neutral-50 hover:bg-neutral-700 h-10 px-4 text-base focus:ring-2 focus:ring-neutral-400 focus:ring-offset-2" do %>
        <%= icon "plus" %>
        <%= content_tag :span, "New restaurant", class: "hidden sm:inline" %>
        <%= content_tag :span, "New", class: "sm:hidden" %>
      <% end %>
    </div>
  </div>
<% end %>
