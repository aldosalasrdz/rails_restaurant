<%= nav_menu_desktop :restaurants %>
<%= nav_menu_mobile :restaurants %>
<%= render "header" %>

<%= link_to restaurants_path, class: "inline-flex items-center text-sm text-neutral-500 mb-10 hover:underline" do %>
  <%= icon "chevron_left" %>
  Back to restaurants
<% end %>
<section>
  <%= image_tag @restaurant.logo, class: "rounded-full h-40 w-40 object-cover border" %>
  <header class="flex justify-between items-center gap-x-4 mt-6">
    <h2 class="font-bold text-2xl leading-tight"><%= @restaurant.name %></h2>
    <div class="flex gap-x-2">
      <%= link_to edit_restaurant_path(@restaurant), class: "inline-flex items-center gap-1.5 justify-center rounded-full font-medium ring-1 ring-neutral-300 outline-none transition-colors bg-neutral-100 hover:bg-neutral-200 h-8 px-3 text-sm focus:ring-2 focus:ring-neutral-400 focus:ring-offset-2" do %>
        <%= icon "edit_pen" %>
        Edit
      <% end %>
      <%= link_to restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: "Do you really want to delete this restaurant?" }, class: "inline-flex items-center gap-1.5 justify-center rounded-full font-medium ring-1 ring-red-300 outline-none transition-colors bg-red-100 text-red-800 hover:bg-red-200 h-8 px-3 text-sm focus:ring-2 focus:ring-neutral-400 focus:ring-offset-2" do %>
        <%= icon "delete_bin" %>
        Delete
      <% end %>
    </div>
  </header>
  <article class="text-neutral-700">
    <div class="flex flex-col gap-y-4">
      <p><%= simple_format @restaurant.description, class: "leading-7" %></p>
    </div>
    <div class="flex gap-x-1.5 mt-4">
      <span>
        <%= icon "map_marker" %>
      </span>
      <span><%= @restaurant.address %></span>
    </div>
    <div class="flex gap-x-1.5 mt-2">
      <span>
        <%= icon "phone" %>
      </span>
      <span><%= number_to_phone(@restaurant.phone) %></span>
    </div>
  </article>
</section>
