<%= link_to restaurant_path(restaurant), class: "bg-white border rounded-lg p-4 flex sm:flex-row flex-col items-center sm:items-start gap-5 transition-colors hover:bg-neutral-100 hover:border-neutral-300" do %>
  <%= image_tag restaurant.logo,
  size: "112x112",
  alt: "#{restaurant.name} logo",
  class: "h-28 w-28 rounded-full object-cover border" %>
  <div class="flex flex-col gap-y-1.5">
    <span class="font-semibold text-balance"><%= restaurant.name %></span>
    <p class="text-neutral-500 text-sm overflow-hidden"><%= truncate(restaurant.description, length: 110) %></p>
  </div>
<% end %>
